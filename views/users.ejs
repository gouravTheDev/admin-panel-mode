<% include ./partials/header %>
<div class="container-fluid">
  <h2 class="text-center">All Users</h2>
  <div class="col-12 mx-auto my-4">
    <div class="row">
      <div class="col-md-3 col-sm-12">
        <form action="/users/searchbyfirstname" method="POST">
          <div class="row">
            <div class="col-9">
              <input
                required
                type="text"
                class="form-control"
                placeholder="First Name"
                name="firstName"
              />
            </div>
            <div class="col-3">
              <input
                type="submit"
                class="btn btn-success float-right"
                value="Search"
              />
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-3 col-sm-12">
        <form action="/users/searchbylastname" method="POST">
          <div class="row">
            <div class="col-9">
              <input
                required
                type="text"
                class="form-control"
                placeholder="Last Name"
                name="lastName"
              />
            </div>
            <div class="col-3">
              <input
                type="submit"
                class="btn btn-success float-right"
                value="Search"
              />
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-3 col-sm-12">
        <form action="/users/searchbyemail" method="POST">
          <div class="row">
            <div class="col-9">
              <input
                required
                type="email"
                class="form-control"
                placeholder="email"
                name="email"
              />
            </div>
            <div class="col-3">
              <input
                type="submit"
                class="btn btn-success float-right"
                value="Search"
              />
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-3 col-sm-12">
        <form action="/users/searchbystatus" method="POST">
          <div class="row">
            <div class="col-9">
              <input
                required
                type="text"
                class="form-control"
                placeholder="Status"
                name="status"
              />
            </div>
            <div class="col-3">
              <input
                type="submit"
                class="btn btn-success float-right"
                value="Search"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% if(allUsers.length == 0){ %>
  <div class="alert alert-warning">No users</div>
  <% }else{ %>
  <div class="col-12 mx-auto">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Address</th>
          <th>State</th>
          <th>City</th>
          <th>Country</th>
          <th>Phone</th>
          <th>D.O.B</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% allUsers.forEach((user)=>{ %>
        <tr>
          <td><%= user.firstName %></td>
          <td><%= user.lastName %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.state %></td>
          <td><%= user.city %></td>
          <td><%= user.country %></td>
          <td><%= user.phone %></td>
          <td><%= user.dob %></td>
          <td><%= user.status %></td>
          <td>
            <div class="btn-group">
              <a href="/users/<%= user._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } %>
</div>
