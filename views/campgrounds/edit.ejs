<% include ../partials/header %>

<div class="container">



  <div class="row">
  <h1 style="text-align:center">EDIT <%= campground.name %></h1>
    <div style="width: 30%; margin: 0 auto;">
	  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
	  <div class="form-group">
	    <label for="exampleInputEmail1">Name</label>
	    <input type="name"  id="exampleInputEmail1" aria-describedby="emailHelp" class="form-control" placeholder="Enter name" name="campground[name]" value="<%= campground.name%>">
	    
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword1">Image</label>
	    <input type="text"  id="exampleInputPassword1" placeholder="Image url" class="form-control" name="campground[image]" value="<%= campground.image%>">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputPassword1">Description</label>
	    <input type="text"  id="exampleInputPassword1" placeholder="Description" class="form-control" name="campground[description]" value="<%= campground.description%>">
	  </div>

	  <div class="form-group">
	    <label for="exampleInputPassword1">Price</label>
	    <input type="number"  id="exampleInputPassword1" class="form-control"  name="campground[price]" min="50" step ="50" value="<%= campground.price%>">
	  </div>
	  
	  <button type="submit" class="btn btn-primary btn-block">Submit</button>
  	</form>
  	</div>
  	</div>
  		
 </div>
