 <% include ../partials/header %>


<div class="container">
 
    <div class="col-md-12">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= campground.image %>">
        <div class="caption">
          <h4 class="float-right">Rs.<%= campground.price %>/night</h4>
          <h1><%= campground.name %></h1>
          <p><%= campground.description %></p>
          <p>
            <em>Submitted By
            <%= campground.author.username %></em>
          </p>
          <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
          <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit The Campground</a>
         <form id="del-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
          <button  class="btn btn-xs btn-danger">Delete</button>
         </form>

         <% } %>

        </div>
      </div>
      <div class="well">
	  <div class="text-right">
	    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add Comment</a>

	  </div>
	  <hr/>
	  	<% campground.comments.forEach((comment)=>{ %>

	  	<div class="row">
		  <div class="col-md-12">
		    <strong><%= comment.author.username %>:-</strong>
		    <p>
				<%= comment.text %>
			</p>
      <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
      <a class="btn btn-xs btn-warning"
         href="/campgrounds/<%=campground._id %>/comments/<%=comment._id%>/edit">
         Edit
      </a>
          <form id="del-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
              <button  class="btn btn-xs btn-danger">Delete</button>
         </form>
       <% } %>
		  </div>
		</div>
		
		<% }) %>
	</div>
    </div>
  </div>
</div>


















